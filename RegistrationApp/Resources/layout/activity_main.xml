<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="45dp"
    android:background="@drawable/bgimg">
    <LinearLayout
        android:paddingTop="35dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:id="@+id/textView1"
                android:textSize="30dp"
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:text="Having an account?"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" Login"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:id="@+id/loginTextView"
                    android:textColor="@color/newAccountColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="60dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Enter Name Of User"
                android:id="@+id/myEditText0"
                android:inputType="text"
                android:drawableStart="@drawable/person"
                android:drawablePadding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="12dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Enter Email Address"
                android:id="@+id/editText1"
                android:inputType="textEmailAddress"
                android:drawableStart="@drawable/mail"
                android:drawablePadding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="12dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Enter User Name"
                android:id="@+id/editText2"
                android:inputType="text"
                android:drawableStart="@drawable/person"
                android:drawablePadding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="12dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="Enter Password"
                android:id="@+id/editText3"
                android:inputType="textPassword"
                android:drawableStart="@drawable/passkey"
                android:drawablePadding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/registerButton"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:text="Register"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:backgroundTint="#1c57ef"
            android:layout_marginHorizontal="60dp"
            android:paddingVertical="10dp"
            app:cornerRadius="25dp"
            android:layout_height="55dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="Or Register With"
            android:layout_marginTop="25dp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            
            android:layout_height="wrap_content">

           <ImageView
                android:id="@+id/Regwithfacebook"
                android:layout_width="45dp"                
                android:src="@drawable/facebook"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                />
            <ImageView
                android:id="@+id/Regwithgoogle"
                android:layout_width="45dp"
                android:src="@drawable/google"
                android:layout_height="45dp"
                android:layout_margin="10dp"/>
          
        </LinearLayout>
    </LinearLayout>
</ScrollView>
