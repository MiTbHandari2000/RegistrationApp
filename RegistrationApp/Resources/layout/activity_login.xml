<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="@dimen/Padding"
    android:background="@drawable/bgimg"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingTop="@dimen/Padding_Top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/Layoutmargingbottom"
                android:id="@+id/textView1"
                android:textSize="@dimen/TitleTextSize"
                android:text="@string/LoginTitle"                
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textSize="@dimen/TextSize"
                    android:layout_width="wrap_content"
                    android:text="@string/DontHaveDialog"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textStyle="bold"
                     android:textSize="@dimen/TextSize"
                    android:id="@+id/createlogic"
                    android:text="@string/CreateAccount"
                    android:textColor="@color/newAccountColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/Login_layout_marginTop_username"
            app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
            android:id="@+id/Login_usernameError"
            app:boxCornerRadiusTopEnd="@dimen/boxCornerRadiusTopEnd"
            app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd"
            app:boxCornerRadiusBottomStart="@dimen/boxCornerRadiusBottomStart"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="@string/HintForUserName"
                android:id="@+id/editText2"
                android:inputType="text"
                android:drawableStart="@drawable/person"
                android:drawablePadding="@dimen/drawablePadding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="@dimen/Login_layout_marginTop_password"
            app:boxCornerRadiusTopStart="@dimen/boxCornerRadiusTopStart"
            app:boxCornerRadiusTopEnd="@dimen/boxCornerRadiusTopEnd"
            android:id="@+id/passwordlay2"
            app:boxCornerRadiusBottomEnd="@dimen/boxCornerRadiusBottomEnd"
            app:boxCornerRadiusBottomStart="@dimen/boxCornerRadiusBottomStart"
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:hint="@string/EnterPasswordHint"
                android:id="@+id/editText3"
                android:inputType="textPassword"
                android:drawableStart="@drawable/passkey"
                android:drawablePadding="@dimen/drawablePadding"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:layout_gravity="right"
            android:text="@string/ForgotPasswordClick"
            android:layout_marginTop="@dimen/Login_layout_marginTop_forgotpassword"
            android:textStyle="bold"
            android:id="@+id/forget1"
            android:layout_marginBottom="@dimen/TextViewmargingbottom"
            android:textSize="@dimen/TextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/LoginButton"
            android:layout_width="@dimen/Button_layout_width"
            android:backgroundTint="@color/Button_Background_color"
            android:text="@string/LoginButtonForLoginPage"
            android:textAllCaps="false"            
            android:textSize="@dimen/ButtonTextSize"
         
            android:paddingVertical="@dimen/paddingVertical"
            app:cornerRadius="@dimen/cornerRadius"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/OrloginwithForLoginpage"
            android:layout_marginTop="@dimen/Login_layout_marginTop_orloginwith"
            android:textStyle="bold"
            android:textSize="@dimen/TextSize"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/Login_layout_marginTop_logo"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/Loginwithfacebook"
                android:layout_width="@dimen/Logo_layout_width"                
                android:src="@drawable/facebook"
                android:layout_height="@dimen/Logo_layout_height"
                android:layout_margin="@dimen/Logo_layout_margin"
                />
            <ImageView
                android:id="@+id/Loginwithgoogle"
                android:layout_width="@dimen/Logo_layout_width"
                android:src="@drawable/google"
                android:layout_height="@dimen/Logo_layout_height"
                android:layout_margin="@dimen/Logo_layout_margin"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
